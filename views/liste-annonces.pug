extends pug-layout/_layout
block content
    section.recherche-liste
        .container
            h1 Liste des annonces
            .row

                .col-3.mb-5
                    .recherche-sidebar.border.p-2.rounded
                        form(action='#')
                            .form-group
                                label(for='marque') Marque
                                select#marque.form-control(name='marque')
                                    option(value='1') Citoën
                                    option(value='2') Peugeot
                                    option(value='3') KIA
                                    option(value='4') Audi
                                    option(value='5') Tesla
                            .form-group
                                label(for='energie') Energie
                                select#energie.form-control(name='marqueVoiture')
                                    option(value='1') Diesel
                                    option(value='2') Essence
                                    option(value='3') Electrique
                                    option(value='4') GPL
                                    option(value='5') Hydrogène
                            .form-group
                                label Type de boite
                                .form-check
                                    input#boiteM.form-check-input(type='radio' name='typeBoite' value='Manuelle')
                                    label.form-check-label(for='boiteM') Manuelle
                                .form-check
                                    input#boiteA.form-check-input(type='radio' name='typeBoite' value='Automatique')
                                    label.form-check-label(for='boiteA') Automatique
                            .form-group
                                label(for='chevaux') Puissance DIN (min)
                                input#chevaux.form-control-range(type='range' min='1' max='100' name='ch' value='50')
                            .form-group
                                label(for='portes') Nombre de portes
                                select#portes.form-control(name='nbPortes')
                                    option(value='3') 3
                                    option(value='5') 5
                            .d-flex.align-items-center.justify-content-center
                                button.btn.btn-secondary(type='submit') Rechercher

                .col-9.liste-resultat
                    h2 #{annonces.length } résultats :
                    each annonce in annonces
                        .resultat
                            .row
                                .col-4
                                    .resultat-img
                                        img.img-fluid(src=annonce.images[0] alt='')
                                .col-8
                                    .resultat-content
                                        h3.resultat-title
                                            a(href='/liste-annonces/annonce/'+annonce._id) #{annonce.car.brand} #{annonce.car.model}
                                        h4.resultat-subtitle #{annonce.car.details.version}
                                        ul
                                            li
                                                i.fas.fa-gas-pump
                                                | #{annonce.car.details.energy}
                                            li
                                                i.fas.fa-cogs
                                                | #{annonce.car.details.transmission}
                                            li
                                                i.fas.fa-road
                                                | #{annonce.car.details.km}
                                            li
                                                i.fas.fa-calendar-alt
                                                | #{annonce.car.details.productionYear}
                                        p.resultat-price
                                            b #{annonce.price} €
